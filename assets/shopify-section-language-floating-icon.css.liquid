 .floating-lang {
    position: fixed;
    bottom: 35vh;
    background-image: linear-gradient(#565656, #151618);
    font-size: 16px;
    color:rgb(255, 255, 255);
    transition: all 0.4s ease;
    z-index: 99999999999;
    right: 15px;
    text-align:center;
    padding:5.5px;
    padding-inline: 15px;
    padding-left: 0px;
    padding-block: 8px;
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
    -webkit-box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
    -moz-box-shadow: 0 .5rem 1rem rgba(0,0,0,.15);
    border-radius:100px;
    opacity:0;
    visibility: hidden;
    -webkit-transform: translateY(-30rem);
    transform: translateY(-30rem);
    -webkit-transition: all 0.4s ease;
    transition: all 0.4s ease;
/*  box-shadow: 1px 2px 14px -6px rgb(0 0 0 / 75%);
    -webkit-box-shadow: 1px 2px 14px -6px rgb(0 0 0 / 75%);
    -moz-box-shadow:  1px 2px 14px -6px rgb(0 0 0 / 75%);
    height:32px;
    width:32px;
    background: #fff; */

  }
  .floating-lang:hover{
    padding-left: 15px;
    background-image: linear-gradient(#565656, #151618);
    color: rgb(255, 255, 255);
  }
  .floating-lang:hover .translate-ui{
  	visibility: visible;
  	opacity: 1;
  	margin-right: 8px;
  }
  .translate-ui{
    visibility: hidden;
    opacity: 0;
    transition: all 0.4s ease;
}
  @media only screen and (max-width:575px){
  .floating-lang {
    left: unset;
    right: 0;
/*     bottom: 12%; */
    padding-left: 15px;
    border-top-right-radius:0;
    border-bottom-right-radius:0;
    font-size: 14px;
  }
  .translate-ui{
    display: none;
  }
}
